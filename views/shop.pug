extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            ha.product__title #{product.title}
                        .card__image 
                            img(src='https://images-na.ssl-images-amazon.com/images/S/compressed.photo.goodreads.com/books/1581527774i/41881472.jpg' alt="A book")
                        .card__content 
                            h2.product__price $19.99
                            p.product__description An excellent book on money, wealth, greed and psychology 
                        .card__actions 
                            button.btn Add to Cart
        else 
            h1 No Products